{#
/**
 * @file
 * Theme override for the suffix field in person content type.
 *
 * @see template_preprocess_field()
 */
#}
{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
  ]
%}
{%
  set title_classes = [
    'field__label',
    label_display == 'visually_hidden' ? 'visually-hidden',
  ]
%}
{% if multiple %}
  <span{{ attributes.addClass(classes, 'field__items', 'person__name-suffix') }}>
    {% for item in items %}
      <span{{ item.attributes.addClass('field__item', 'person__name-suffix-item') }}>{{ item.content }}</span>
    {% endfor %}
  </span>
{% else %}
  {% for item in items %}
    <span{{ attributes.addClass(classes, 'field__item', 'person__name-suffix') }}>{{ item.content }}</span>
  {% endfor %}
{% endif %}
