<div class="block blog-categories">
  <h2 class="block__title blog-categories__title">Blog Categories</h2>
  <div class="block__body blog-categories__body">
    <ul class="blog-categories__items {{ classes|default('') }}">
      {% for item in items %}
        <li class="blog-categories__item">
          <i class="{{ 'blog-categories__icon fa fa-' ~ item.icon }}">
          </i>
          <a href="item.url" class="blog-categories__link">{{ item.category }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
